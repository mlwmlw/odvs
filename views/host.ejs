<script>
	$(document).ready(function() {
		$('.showadd').click(function() {
			$('#addModal').modal('show');
		});
		$('.btn.addbr').click(function() {
			var done = true;
			$('#addModal input').each(function() {				
				if($(this).val() != '') {
					return;
				}
				$(this).parents('div.control-group').addClass('error');
				$(this).focus();
				done = false;
			});
			if(done) {
				$.ajax({
					url: '/api/br',			
					type: 'post',
					dataType: 'json',
					data: $('#addModal form').serialize()				
				}).done(function(res) {
					if(res.status) {
						refresh();
					}
					else {
						alert(res.message);
					}
				});
			}
		});
	
	});
	function show_vport(name) {
		$('.br').addClass('hide');
		
		$('.br_' + name).removeClass('hide');
	}
	
	function remove_br(host, name) {
		checkModal('Delete vSwitch', function(bool) {
			if(!bool)
				return;
			$.ajax({
				url: '/api/br',			
				type: 'delete',
				dataType: 'json',
				data: {host:host, name: name}				
			}).done(function(res) {
				if(res.status) {
					refresh();
				}
				else {
					alert(res.message);
				}
			});
		});
	}
	function remove_port(host, name, btn) {
		checkModal('Delete vPort ' + name, function() {
			$.ajax({
				url: '/api/port',			
				type: 'delete',
				dataType: 'json',
				data: {host:host, iface: name}
			}).done(function(res) {
				if(res.status) {
					$(btn).parents('tr').remove();
				}
				else {
					alert(res.message);
				}
			});
		});
	}
	function set_collector(host, name, btn) {
		var $btn = $(btn);
		var on = $btn.hasClass('btn-success') ? 1: 0;
		$.ajax({
				url: '/api/collector',			
				type: on ? 'delete': 'post',
				dataType: 'json',
				data: {host:host, name: name}
			}).done(function(res) {
				if(res.status) {
					if(on) {
						$btn.find('i').removeClass('icon-white');
						$btn.removeClass('btn-success');
					}
					else {
						$btn.find('i').addClass('icon-white');
						$btn.addClass('btn-success');
					}
				}
				else {
					alert(res.message);
				}
			});
		
	}
</script>
